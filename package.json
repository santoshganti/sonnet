{
    "name": "sonnet",
    "version": "1.3.0",
    "license": "GPL-3.0-only",
    "engines": {
        "node": ">=22.14"
    },
    "volta": {
        "node": "^22.14",
        "yarn": "^1.22"
    },
    "dependencies": {
        "@anthropic-ai/claude-code": "^1.0.63",
        "@imoverlord/yamlfmt": "^0.3",
        "@prettier/plugin-xml": "^3",
        "bash-language-server": "^5",
        "docker-compose": "^1.2.0",
        "dockerfile-language-service": "^0.15",
        "dotenv": "^17.2.1",
        "editorconfig": "^3.0.1",
        "editorconfig-checker": "^6.1.0",
        "eslint": "^9",
        "eslint-plugin-prettier": "^5",
        "markdown": "^0.5.0",
        "markdown-it": "^14.1.0",
        "markdown-table": "^3.0.4",
        "powershell": "^2",
        "prettier": "^3",
        "prettier-linter-helpers": "^1.0.0",
        "prettier-plugin-ini": "^1.3.0",
        "prettier-plugin-jsdoc": "^1.3.2",
        "prettier-plugin-properties": "^0.3.0",
        "prettier-plugin-sort-json": "^4.1.1",
        "readline": "^1.3.0",
        "shell-completion": "*",
        "shfmt": "^0.0.1",
        "shx": "^0.4.0",
        "toml": "^3.0.0",
        "toml-eslint-parser": "^0.10.0",
        "typescript-language-server": "^4.3.4",
        "vim-language-server": "^2.3.1",
        "vscode-langservers-extracted": "^4.10.0",
        "vscode-languageserver-protocol": "^3.17.5",
        "wscat": "^6.1.0",
        "yaml-language-server": "^1.17.0"
    },
    "scripts": {
        "clean": "rm -rf node_modules yarn.lock",
        "install:fresh": "yarn clean && yarn install",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --ext .js,.ts,.yaml,.yml,.json",
        "lint:fix": "eslint . --ext .js,.ts,.yaml,.yml,.json --fix",
        "check:editorconfig": "editorconfig-checker",
        "check:all": "yarn format:check && yarn lint && yarn check:editorconfig",
        "fix:all": "yarn format && yarn lint:fix",
        "nvm:use": "nvm use",
        "nvm:install": "nvm install && nvm use",
        "nvm:check": "node --version && npm --version && yarn --version",
        "setup": "yarn nvm:use && yarn install:fresh"
    },
    "resolutions": {
        "url-parse": ">=1.5.10"
    }
}
